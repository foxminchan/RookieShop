@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout is not null)
        Layout = parentLayout.ToString();
    else
        Layout = "_Layout.cshtml";
}

<div id="setting-section" class="bg-white w-full flex flex-col gap-5 px-3 md:px-16 lg:px-28 md:flex-row text-[#161931]">
    <aside class="hidden py-4 md:w-1/3 lg:w-1/4 md:block">
        <div class="sticky flex flex-col gap-2 p-4 text-sm top-12">
            <h2 class="pl-3 mb-4 text-2xl font-semibold">Settings</h2>
            <a asp-area="User" asp-controller="Account" asp-action="Index" class="flex items-center px-3 py-2.5 @(ViewContext.RouteData.Values["controller"]!.Equals("Account") ? "font-bold bg-white text-indigo-900 border rounded-full" : "font-semibold hover:text-indigo-900 hover:border hover:rounded-full")">
                Account Settings
            </a>
            <a asp-area="Order" asp-controller="Order" asp-action="Index" class="flex items-center px-3 py-2.5 @(ViewContext.RouteData.Values["controller"]!.Equals("Order") ? "font-bold bg-white text-indigo-900 border rounded-full" : "font-semibold hover:text-indigo-900 hover:border hover:rounded-full")">
                Order History
            </a>
        </div>
    </aside>
    <main class="w-full min-h-screen py-1 md:w-2/3 lg:w-3/4">
        @RenderBody()
    </main>
</div>

@await RenderSectionAsync("Scripts", false)