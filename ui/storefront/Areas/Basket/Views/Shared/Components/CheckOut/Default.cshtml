@using Microsoft.AspNetCore.Mvc.TagHelpers
@using RookieShop.Storefront.Areas.Basket.Models
<form>
    <label class="flex items-center mb-1.5 text-gray-400 text-sm font-medium">
        Street
    </label>
    <div class="flex pb-4 w-full">
        <div class="relative w-full">
            <input type="text"
                   class="block w-full h-11 pr-11 pl-5 py-2.5 text-base font-normal shadow-xs text-gray-900 bg-white border border-gray-300 rounded-lg placeholder-gray-500 focus:outline-gray-400 "
                   placeholder="Cong Hoa" required />
        </div>
    </div>
    <label class="flex items-center mb-1.5 text-gray-400 text-sm font-medium">
        City
    </label>
    <div class="flex pb-4 w-full">
        <div class="relative w-full">
            <input type="text"
                   class="block w-full h-11 pr-11 pl-5 py-2.5 text-base font-normal shadow-xs text-gray-900 bg-white border border-gray-300 rounded-lg placeholder-gray-500 focus:outline-gray-400 "
                   placeholder="Tan Binh" required />
        </div>
    </div>
    <label class="flex items-center mb-1.5 text-gray-400 text-sm font-medium">
        Province
    </label>
    <div class="flex pb-4 w-full">
        <div class="relative w-full">
            <input type="text"
                   class="block w-full h-11 pr-11 pl-5 py-2.5 text-base font-normal shadow-xs text-gray-900 bg-white border border-gray-300 rounded-lg placeholder-gray-500 focus:outline-gray-400 "
                   placeholder="Ho Chi Minh" required />
        </div>
    </div>
    <label class="flex items-center mb-1.5 text-gray-400 text-sm font-medium">
        Payment Method
    </label>
    <div class="flex pb-4 w-full">
        <div class="relative w-full">
            <select type="text"
                    class="block w-full h-11 pr-11 pl-5 py-2.5 text-base font-normal shadow-xs text-gray-900 bg-white border border-gray-300 rounded-lg placeholder-gray-500 focus:outline-gray-400">
                <option value="@PaymentMethod.Cash">@PaymentMethod.Cash</option>
                <option value="@PaymentMethod.Card">@PaymentMethod.Card</option>
            </select>
        </div>
    </div>
    <button class="w-full text-center bg-indigo-600 rounded-xl py-3 px-6 font-semibold text-lg text-white transition-all duration-500 hover:bg-indigo-700">
        Checkout
    </button>
</form>