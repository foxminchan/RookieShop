@using Microsoft.AspNetCore.Mvc.TagHelpers
@using RookieShop.Storefront.Areas.Basket.Models
@model RookieShop.Storefront.Areas.Order.Models.OrderFromRequest

<form asp-area="Order" asp-controller="Order" asp-action="CheckOut">
    <label asp-for="Street" class="flex items-center mb-1.5 text-gray-400 text-sm font-medium"></label>
    <div class="flex pb-4 w-full">
        <div class="relative w-full">
            <input type="text"
                   asp-for="Street"
                   class="block w-full h-11 pr-11 pl-5 py-2.5 text-base font-normal shadow-xs text-gray-900 bg-white border border-gray-300 rounded-lg placeholder-gray-500 focus:outline-gray-400 "
                   placeholder="Cong Hoa"
                   required/>
        </div>
    </div>
    <label asp-for="City" class="flex items-center mb-1.5 text-gray-400 text-sm font-medium"></label>
    <div class="flex pb-4 w-full">
        <div class="relative w-full">
            <input type="text"
                   asp-for="City"
                   data-smartpaste-description="The city or district where you live, exclude Ho Chi Minh City, Ha Noi, Da Nang, Can Tho, Hai Phong because they are provinces"
                   class="block w-full h-11 pr-11 pl-5 py-2.5 text-base font-normal shadow-xs text-gray-900 bg-white border border-gray-300 rounded-lg placeholder-gray-500 focus:outline-gray-400 "
                   placeholder="Tan Binh"
                   required/>
        </div>
    </div>
    <label asp-for="Province" class="flex items-center mb-1.5 text-gray-400 text-sm font-medium"></label>
    <div class="flex pb-4 w-full">
        <div class="relative w-full">
            <input type="text"
                   asp-for="Province"
                   data-smartpaste-description="The province of the city where you live"
                   class="block w-full h-11 pr-11 pl-5 py-2.5 text-base font-normal shadow-xs text-gray-900 bg-white border border-gray-300 rounded-lg placeholder-gray-500 focus:outline-gray-400 "
                   placeholder="Ho Chi Minh"
                   required/>
        </div>
    </div>
    <label asp-for="PaymentMethod" class="flex items-center mb-1.5 text-gray-400 text-sm font-medium"></label>
    <div class="mb-3 flex">
        <div class="flex items-center">
            <input type="radio"
                   asp-for="PaymentMethod"
                   data-smartpaste-description="True if the card holder name, card number, ccv is empty"
                   class="form-radio h-5 w-5 text-indigo-500"
                   value="@PaymentMethod.Cash"
                   checked/>
            <img loading="lazy" src="~/imgs/payment/dollar.png" class="h-8 ml-3" alt="Cash" asp-append-version="true"/>
        </div>
        <div class="flex items-center ml-2">
            <input type="radio"
                   asp-for="PaymentMethod"
                   data-smartpaste-description="True if the card holder name, card number, ccv is not empty"
                   class="form-radio h-5 w-5 text-indigo-500"
                   value="@PaymentMethod.Card"/>
            <img loading="lazy" src="~/imgs/payment/stripe.png" class="h-8 ml-3" alt="Stripe" asp-append-version="true"/>
        </div>
    </div>
    <hr/>
    <button type="submit"
            class="w-full text-center bg-indigo-600 rounded-xl py-3 px-6 font-semibold text-lg text-white transition-all duration-500 hover:bg-indigo-700 my-6">
        Checkout
    </button>
    <smart-paste-button class="w-full text-center bg-stone-600 rounded-xl py-3 px-6 font-semibold text-lg text-white transition-all duration-500 hover:bg-stone-700">
        <img loading="lazy" src="~/imgs/payment/smart-paste.svg" class="h-6 inline-block mr-2" alt="Paste" asp-append-version="true"/>
        Smart Paste
    </smart-paste-button>
</form>