@{
    ViewBag.Title = "Order Canceled";
    Layout = "_Layout";
}

<section class="grid min-h-full place-items-center bg-white px-6 py-24 sm:py-32 lg:px-8">
    <div class="text-center">
        <h1 class="mt-4 text-3xl font-bold tracking-tight text-gray-900 sm:text-5xl">
            Your order has been canceled
        </h1>
        <p class="mt-6 text-base leading-7 text-gray-600">
            Sorry, we couldn't process your order. Please try again later.
        </p>
        <div class="mt-10 flex items-center justify-center gap-x-6">
            <a asp-area="Basket" asp-controller="Basket" asp-action="Index" class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                Back to your basket
            </a>
            <a href="mailto:nguyenxuannhan407@gmail.com" class="text-sm font-semibold text-gray-900">
                Contact support <span aria-hidden="true">&rarr;</span>
            </a>
        </div>
    </div>
</section>