@using RookieShop.Domain.Entities.OrderAggregator.Enums
@model RookieShop.Application.Orders.DTOs.OrderDto

<body style="background-color:#e2e1e0; font-family: Open Sans, sans-serif; font-size:100%; font-weight:400; line-height:1.4; color:#000;">
    <table aria-label="Order Details" style="max-width:670px; margin:50px auto 10px; background-color:#fff; padding:50px; -webkit-border-radius:3px; -moz-border-radius:3px; border-radius:3px; -webkit-box-shadow:0 1px 3px rgba(0,0,0,.12),0 1px 2px rgba(0,0,0,.24); -moz-box-shadow:0 1px 3px rgba(0,0,0,.12),0 1px 2px rgba(0,0,0,.24); box-shadow:0 1px 3px rgba(0,0,0,.12),0 1px 2px rgba(0,0,0,.24); border-top: solid 10px #497abd;">
        <thead>
            <tr>
                <th style="text-align:left;">
                    <img loading="lazy" src="https://github.com/foxminchan/RookieShop/raw/main/img/nash-tech.png" alt="NashTech" style="width: 100px;" />
                </th>
                <th style="text-align:right;font-weight:400;">@DateTime.UtcNow.ToString("yyyy-MM-dd")</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td style="height:35px;"></td>
            </tr>
            <tr>
                <td colspan="2" style="border: solid 1px #ddd; padding:10px 20px;">
                    <p align="center">
                        @{
                            var imageSource = Model.OrderStatus switch
                            {
                                OrderStatus.Pending => "https://i.imgur.com/QFIpLQI.png",
                                OrderStatus.Shipping => "https://i.imgur.com/KOrEOg6.png",
                                OrderStatus.Canceled => "https://i.imgur.com/aHZKJJR.png",
                                _ => "https://i.imgur.com/Bh4GVRH.png"
                            };
                        }
                        <img loading="lazy" src="@imageSource" alt="@Model.OrderStatus.ToString()" style="width: 100px;" />
                    </p>

                    <p style="font-size:14px;margin:0 0 6px 0;">
                        <span style="font-weight:bold; display:inline-block; min-width:146px">Status:</span>
                        <b>@Model.OrderStatus.ToString()</b>
                    </p>

                     <p style="font-size:14px;margin:0 0 6px 0;">
                        <span style="font-weight:bold; display:inline-block; min-width:146px">Order:</span>#@Model.Id
                    </p>
                </td>
            </tr>
            </tbody>
        <tfoot>
            <tr>
                <td colspan="2" style="font-size:14px; padding:50px 15px 0 15px;">
                    <strong style="display:block; margin:0 0 10px 0;">Best regards,</strong>
                    <a href="https://www.nashtechglobal.com/" target="_blank" rel="noopener">Rookie Shop</a><br />
                    E-town 1, Level 3, 364 Cong Hoa Street, Tan Binh District, Ho Chi Minh City<br />
                    <br />
                    <b>Phone: </b><a href="tel:02838106200" target="_blank">028-3810-6200</a><br />
                </td>
            </tr>
        </tfoot>
    </table>
</body>