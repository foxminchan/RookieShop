@model RookieShop.Storefront.Areas.Product.Models.Feedbacks.ListFeedbackViewModel

<div class="pb-8 border-b border-gray-200 max-xl:max-w-3xl max-xl:mx-auto">
    <h4 class="font-manrope font-semibold text-3xl leading-10 text-black mb-6">
        Most helpful positive
        review
    </h4>
    @if (Model.Feedbacks.Any())
    {
        foreach (var feedback in Model.Feedbacks)
        {
            <div class="flex sm:items-center flex-col sm:flex-row justify-between  mb-4">
                <div class="flex items-center gap-3">
                    @for (var star = 1; star <= 5; star++)
                    {
                        <svg xmlns="http://www.w3.org/2000/svg"
                             aria-hidden="true"
                             width="30" height="30"
                             class="w-5 h-5 @(star <= feedback.Rating ? "text-amber-500" : "text-gray-300")"
                             fill="currentColor"
                             viewBox="0 0 20 20">
                            fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z">
                            </path>
                        </svg>
                    }
                </div>
                <div class="flex items-center gap-3">
                    <h6 class="font-semibold text-lg leading-8 text-black">
                        @(feedback.Customer is null ? "Anonymous" : feedback.Customer.Name)
                    </h6>
                    <p class="font-medium text-base leading-7 text-gray-400">@feedback.UpdatedDate.ToString("dd/MM/yyyy")</p>
                </div>
            </div>

            <p class="font-normal text-lg leading-8 text-gray-500 ">
                @feedback.Content
            </p>
        }
    }
    else
    {
        <p class="font-normal text-lg leading-8 text-gray-500 ">
            No reviews yet.
        </p>
    }
</div>