@{
    ViewBag.Title = "UnAuthorized";
    Layout = "_Layout";
}

<section class="bg-white">
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
        <div class="mx-auto max-w-screen-sm text-center">
            <h1 class="mb-4 text-7xl tracking-tight font-extrabold lg:text-9xl text-red-900">403</h1>
            <p class="mb-4 text-3xl tracking-tight font-bold text-gray-900 md:text-4xl">UnAuthorized</p>
            <p class="mb-4 text-lg font-light text-gray-500">
                You are not authorized to access this page. Please sign in with a user account that has the necessary permissions.
            </p>
            <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="inline-block px-6 py-3 text-lg font-semibold text-white bg-red-900 rounded-lg hover:bg-red-700">
                    Back to Home
                </a>
                <a asp-area="User" asp-controller="Account" asp-action="Login" class="inline-block px-6 py-3 text-lg font-semibold text-white bg-gray-900 rounded-lg hover:bg-gray-800">
                    Sign In
                </a>
            </div>
        </div>
    </div>
</section>